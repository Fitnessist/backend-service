{
  "name": "clean-rest-typescript-boilerplate",
  "version": "1.0.0",
  "description": "this repo is a boilerplate for clean architecture of rest api using typescript language",
  "main": "dist/main/server.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "build:watch": "npm run build --watch",
    "dev": "nodemon -L --watch ./dist ./dist/main/server.js",
    "start": "node dist/main/server.js",
    "start:dev": "concurrently --kill-others-on-fail \"npm run build:watch\" \"npm run dev\"",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:staged": "npm run test --findRelatedTests",
    "test:ci": "npm run test -- --coverage",
    "lint": "eslint --ext .ts --fix --ignore-path .gitignore ./",
    "prepare": "husky install"
  },
  "keywords": [
    "clean",
    "architecture",
    "typescript",
    "rest",
    "api"
  ],
  "author": "tri adi",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "concurrently": "^8.0.1",
    "eslint": "^8.40.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "node-pg-migrate": "^6.2.2",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run test:staged"
    ]
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fastest-validator": "^1.17.0",
    "module-alias": "^2.2.2",
    "pg": "^8.10.0",
    "winston": "^3.8.2"
  },
  "_moduleAliases": {
    "@domain": "dist/domain",
    "@application": "dist/application",
    "@common": "dist/common",
    "@infrastructure": "dist/infrastructure",
    "@main": "dist/main"
  },
  "engines": {
    "node": "18.x"
  }
}
{
  "name": "clean-rest-typescript-boilerplate",
  "version": "1.0.0",
  "description": "this repo is a boilerplate for clean architecture of rest api using typescript language",
  "main": "dist/main/server.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "build:watch": "npm run build -- --watch",
    "dev": "nodemon -L --watch ./dist ./dist/main/server.js",
    "start": "node dist/main/server.js",
    "start:dev": "concurrently --kill-others-on-fail \"npm run build:watch\" \"npm run start\"",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:staged": "npm run test -- --findRelatedTests",
    "test:ci": "npm run test -- --coverage",
    "lint": "eslint --ext .ts --ignore-path .gitignore --fix .",
    "prepare": "husky install"
  },
  "keywords": [
    "clean",
    "architecture",
    "typescript",
    "rest",
    "api"
  ],
  "author": "tri adi",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "concurrently": "^8.0.1",
    "eslint": "^8.40.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "lint-staged": [
    "npm run lint",
    "npm run test:staged"
  ]
}